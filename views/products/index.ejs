<% layout('layouts/boilerplate')%>
<%- include('../partials/navbar')%>


<section id="home" class="hero-section">
    <div id="heroCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/women1.jpeg" class="d-block w-100" alt="Empowering Women">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Empowering Women with Knowledge</h1>
                    <p>Learn about your legal rights and protections.</p>
                    <a href="#services" class="btn btn-primary">Explore Services</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/women2.jpeg" class="d-block w-100" alt="Legal Rights">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Know Your Legal Rights</h1>
                    <p>Gain access to comprehensive legal support and resources.</p>
                    <a href="#legal-rights" class="btn btn-primary">Learn More</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/women3.jpeg" class="d-block w-100" alt="Safety for Women">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Ensuring Women's Safety</h1>
                    <p>Get guidance on safety measures and assistance when needed.</p>
                    <a href="#contact" class="btn btn-primary">Contact Us</a>
                </div>
            </div>
        </div>

        <!-- Carousel controls -->
        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>


<section class="about" id="about">
    <h2>About Us</h2>
    <p>Our mission is to educate and empower women with the knowledge of their legal rights and protections to ensure a safe and equitable society.</p>
</section>

<!-- Services Section -->
<section class="services" id="services">
    <h2>Our Services</h2>
    <div class="service-boxes">
        <div class="service-box">
            <h3>Personalized Questionnaire</h3>
            <p>Get tailored legal advice based on your situation.</p>
        </div>
        <div class="service-box">
            <h3>Legal Rights Information</h3>
            <p>Access detailed information on women's safety laws.</p>
        </div>
        <div class="service-box">
            <h3>Animated Legal Videos</h3>
            <p>Watch informative videos explaining key laws and rights.</p>
        </div>
    </div>
</section>

<!-- Legal Rights Section -->
<section class="legal-rights" id="legal-rights">
    <h2>Know Your Legal Rights</h2>
    <p>Stay informed about your rights under various laws that protect women in India, including protection from abuse, harassment, and discrimination.</p>
</section>

<!-- Contact Section -->
<section class="contact" id="contact">
    <h2>Contact Us</h2>
    <form action="#">
        <input type="text" placeholder="Your Name">
        <input type="email" placeholder="Your Email">
        <textarea placeholder="Your Message"></textarea>
        <button type="submit">Submit</button>
    </form>
</section>